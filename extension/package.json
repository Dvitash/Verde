{
  "name": "verde",
  "publisher": "Dvitash",
  "displayName": "Verde",
  "description": "A VS Code extension for exploring and editing Roblox game instances",
  "version": "0.0.6",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvitash/verde.git"
  },
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Verde",
      "properties": {
        "verde.sourcemapPath": {
          "type": "string",
          "default": "sourcemap.json",
          "description": "Path to sourcemap file"
        },
        "verde.port": {
          "type": "number",
          "default": 9000,
          "description": "Port for the WebSocket server"
        },
        "verde.host": {
          "type": "string",
          "default": "localhost",
          "description": "Host IP address for the WebSocket server"
        },
        "verde.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the server when the extension activates"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "verdeContainer",
          "title": "Verde",
          "icon": "$(folder)"
        }
      ]
    },
    "views": {
      "verdeContainer": [
        {
          "id": "verde.view",
          "name": "Explorer"
        },
        {
          "type": "webview",
          "id": "verde.properties",
          "name": "Properties"
        }
      ]
    },
    "commands": [
      {
        "command": "verde.showOutput",
        "title": "Show Output",
        "category": "Verde"
      },
      {
        "command": "verde.renameInstance",
        "title": "Rename Instance",
        "category": "Verde"
      },
      {
        "command": "verde.duplicateInstance",
        "title": "Duplicate Instance",
        "category": "Verde"
      },
      {
        "command": "verde.deleteInstance",
        "title": "Delete Instance",
        "category": "Verde"
      },
      {
        "command": "verde.copyInstance",
        "title": "Copy Instance",
        "category": "Verde"
      },
      {
        "command": "verde.pasteInstance",
        "title": "Paste Instance",
        "category": "Verde"
      },
      {
        "command": "verde.addInstance",
        "title": "Add Child...",
        "category": "Verde"
      },
      {
        "command": "verde.openScript",
        "title": "Open Script",
        "category": "Verde"
      },
      {
        "command": "verde.copyRobloxPath",
        "title": "Copy Roblox Path",
        "category": "Verde"
      },
      {
        "command": "verde.copyFilePath",
        "title": "Copy File Path",
        "category": "Verde"
      },
      {
        "command": "verde.startServer",
        "title": "Start Server",
        "category": "Verde"
      },
      {
        "command": "verde.stopServer",
        "title": "Stop Server",
        "category": "Verde"
      },
      {
        "command": "verde.togglePropertiesPanelMode",
        "title": "Toggle Properties Panel Mode",
        "category": "Verde"
      }
    ],
    "keybindings": [
      {
        "command": "verde.renameInstance",
        "key": "f2",
        "when": "focusedView == verde.view"
      },
      {
        "command": "verde.deleteInstance",
        "key": "delete",
        "when": "focusedView == verde.view"
      },
      {
        "command": "verde.copyInstance",
        "key": "ctrl+c",
        "mac": "cmd+c",
        "when": "focusedView == verde.view"
      },
      {
        "command": "verde.pasteInstance",
        "key": "ctrl+v",
        "mac": "cmd+v",
        "when": "focusedView == verde.view"
      },
      {
        "command": "verde.duplicateInstance",
        "key": "ctrl+d",
        "mac": "cmd+d",
        "when": "focusedView == verde.view"
      },
      {
        "command": "verde.addInstance",
        "key": "ctrl+shift+a",
        "when": "focusedView == verde.view"
      },
      {
        "command": "verde.renameInstance",
        "key": "enter",
        "when": "focusedView == verde.view"
      },
      {
        "command": "verde.togglePropertiesPanelMode",
        "key": "alt+shift+p"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "verde.showOutput",
          "when": "view == verde.view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "verde.renameInstance",
          "when": "view == verde.view",
          "group": "7_modification"
        },
        {
          "command": "verde.duplicateInstance",
          "when": "view == verde.view",
          "group": "7_modification"
        },
        {
          "command": "verde.deleteInstance",
          "when": "view == verde.view",
          "group": "7_modification"
        },
        {
          "command": "verde.copyInstance",
          "when": "view == verde.view",
          "group": "9_cutcopypaste"
        },
        {
          "command": "verde.pasteInstance",
          "when": "view == verde.view",
          "group": "9_cutcopypaste"
        },
        {
          "command": "verde.addInstance",
          "when": "view == verde.view",
          "group": "7_modification"
        },
        {
          "command": "verde.copyRobloxPath",
          "when": "view == verde.view",
          "group": "8_copy"
        },
        {
          "command": "verde.copyFilePath",
          "when": "view == verde.view && viewItem == script",
          "group": "8_copy"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.18.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}